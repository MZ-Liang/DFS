<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfs.api.mapper.book.BookFileMapper">

  <sql id="select_column">
    id, book_id, file_id, order_number
  </sql>

  <sql id="where_condition">
    <where>
      <if test="bookId != null">
        book_id = #{bookId,jdbcType=BIGINT}
      </if>
      <if test="fileId != null">
        and file_id = #{fileId,jdbcType=BIGINT}
      </if>
      <if test="orderNumber != null">
        and order_number = #{orderNumber,jdbcType=INTEGER}
      </if>
    </where>
  </sql>

  <insert id="insert" parameterType="com.dfs.api.entity.book.BookFileEntity">
    insert into book_file (id, book_id, file_id, 
      order_number)
    values (#{id,jdbcType=BIGINT}, #{bookId,jdbcType=BIGINT}, #{fileId,jdbcType=BIGINT}, 
      #{orderNumber,jdbcType=INTEGER})
  </insert>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from book_file
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <update id="updateByPrimaryKey" parameterType="com.dfs.api.entity.book.BookFileEntity">
    update book_file
    set book_id = #{bookId,jdbcType=BIGINT},
      file_id = #{fileId,jdbcType=BIGINT},
      order_number = #{orderNumber,jdbcType=INTEGER}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <update id="updateByPrimaryKeySelective" parameterType="com.dfs.api.entity.book.BookFileEntity">
    update book_file
    <set>
      <if test="bookId != null">
        book_id = #{bookId,jdbcType=BIGINT},
      </if>
      <if test="fileId != null">
        file_id = #{fileId,jdbcType=BIGINT},
      </if>
      <if test="orderNumber != null">
        order_number = #{orderNumber,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.dfs.api.entity.book.BookFileEntity">
    select 
    <include refid="select_column" />
    from book_file
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByCondition" parameterType="com.dfs.api.entity.book.BookFileEntity" resultType="com.dfs.api.entity.book.BookFileEntity">
    select 
    <include refid="select_column" />
    from book_file
    <include refid="where_condition" />
  </select>

  <select id="countByCondition" parameterType="com.dfs.api.entity.book.BookFileEntity" resultType="java.lang.Integer">
    select count(*) 
    from book_file
    <include refid="where_condition" />
  </select>
</mapper>