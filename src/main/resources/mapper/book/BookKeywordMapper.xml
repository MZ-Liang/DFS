<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfs.api.mapper.book.BookKeywordMapper">

  <sql id="select_column">
    id, book_id, keyword_id
  </sql>

  <sql id="where_condition">
    <where>
      <if test="bookId != null">
        book_id = #{bookId,jdbcType=BIGINT}
      </if>
      <if test="keywordId != null">
        and keyword_id = #{keywordId,jdbcType=BIGINT}
      </if>
    </where>
  </sql>

  <insert id="insert" parameterType="com.dfs.api.entity.book.BookKeywordEntity">
    insert into book_keyword (id, book_id, keyword_id
      )
    values (#{id,jdbcType=BIGINT}, #{bookId,jdbcType=BIGINT}, #{keywordId,jdbcType=BIGINT}
      )
  </insert>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from book_keyword
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <update id="updateByPrimaryKey" parameterType="com.dfs.api.entity.book.BookKeywordEntity">
    update book_keyword
    set book_id = #{bookId,jdbcType=BIGINT},
      keyword_id = #{keywordId,jdbcType=BIGINT}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <update id="updateByPrimaryKeySelective" parameterType="com.dfs.api.entity.book.BookKeywordEntity">
    update book_keyword
    <set>
      <if test="bookId != null">
        book_id = #{bookId,jdbcType=BIGINT},
      </if>
      <if test="keywordId != null">
        keyword_id = #{keywordId,jdbcType=BIGINT},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.dfs.api.entity.book.BookKeywordEntity">
    select 
    <include refid="select_column" />
    from book_keyword
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByCondition" parameterType="com.dfs.api.entity.book.BookKeywordEntity" resultType="com.dfs.api.entity.book.BookKeywordEntity">
    select 
    <include refid="select_column" />
    from book_keyword
    <include refid="where_condition" />
  </select>

  <select id="countByCondition" parameterType="com.dfs.api.entity.book.BookKeywordEntity" resultType="java.lang.Integer">
    select count(*) 
    from book_keyword
    <include refid="where_condition" />
  </select>
  
  <select id="getRelationModelByBookId" parameterType="java.lang.Long" resultType="com.dfs.api.model.RelationBasicModel">
    select k.id,k.name,bk.id relationId,bk.book_id parentId
    from book_keyword bk,keyword k
    where bk.keyword_id=k.id and bk.book_id=#{bookId,jdbcType=BIGINT}
  </select>
</mapper>