      <if test="bookId != null">
        book_id = #{bookId,jdbcType=BIGINT}
      </if>
      <if test="editorType != null">
        and editor_type = #{editorType,jdbcType=BIGINT}
      </if>
      <if test="userId != null">
        and user_id = #{userId,jdbcType=BIGINT}
      </if>
    </where>
  </sql>

  <insert id="insert" parameterType="com.dfs.api.entity.book.BookEditorEntity">
    insert into book_editor (id, book_id, editor_type, 
      user_id)
    values (#{id,jdbcType=BIGINT}, #{bookId,jdbcType=BIGINT}, #{editorType,jdbcType=BIGINT}, 
      #{userId,jdbcType=BIGINT})
