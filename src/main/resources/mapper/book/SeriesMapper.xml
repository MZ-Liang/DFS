<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfs.api.mapper.book.SeriesMapper">

  <sql id="select_column">
    id, name, executor, writingmode
  </sql>

  <sql id="where_condition">
    <where>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR}
      </if>
      <if test="executor != null">
        and executor = #{executor,jdbcType=BIGINT}
      </if>
      <if test="writingmode != null">
        and writingmode = #{writingmode,jdbcType=BIGINT}
      </if>
    </where>
  </sql>

  <insert id="insert" parameterType="com.dfs.api.entity.book.SeriesEntity">
    insert into series (id, name, executor, 
      writingmode)
    values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{executor,jdbcType=BIGINT}, 
      #{writingmode,jdbcType=BIGINT})
  </insert>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from series
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <update id="updateByPrimaryKey" parameterType="com.dfs.api.entity.book.SeriesEntity">
    update series
    set name = #{name,jdbcType=VARCHAR},
      executor = #{executor,jdbcType=BIGINT},
      writingmode = #{writingmode,jdbcType=BIGINT}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <update id="updateByPrimaryKeySelective" parameterType="com.dfs.api.entity.book.SeriesEntity">
    update series
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="executor != null">
        executor = #{executor,jdbcType=BIGINT},
      </if>
      <if test="writingmode != null">
        writingmode = #{writingmode,jdbcType=BIGINT},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.dfs.api.entity.book.SeriesEntity">
    select 
    <include refid="select_column" />
    from series
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByCondition" parameterType="com.dfs.api.entity.book.SeriesEntity" resultType="com.dfs.api.entity.book.SeriesEntity">
    select 
    <include refid="select_column" />
    from series
    <include refid="where_condition" />
  </select>

  <select id="countByCondition" parameterType="com.dfs.api.entity.book.SeriesEntity" resultType="java.lang.Integer">
    select count(*) 
    from series
    <include refid="where_condition" />
  </select>
</mapper>