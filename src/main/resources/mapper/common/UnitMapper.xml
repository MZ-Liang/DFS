<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfs.api.mapper.common.UnitMapper">

  <sql id="select_column">
    id, name, name_en, role, unit_type
  </sql>
  
  <sql id="select_basic_column">
    id, name
  </sql>

  <sql id="where_condition">
    <where>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR}
      </if>
      <if test="nameEn != null">
        and name_en = #{nameEn,jdbcType=VARCHAR}
      </if>
      <if test="role != null">
        and role = #{role,jdbcType=BIGINT}
      </if>
      <if test="unitType != null">
        and unit_type = #{unitType,jdbcType=INTEGER}
      </if>
    </where>
  </sql>

  <insert id="insert" parameterType="com.dfs.api.entity.common.UnitEntity">
    insert into unit (id, name, name_en, 
      role, unit_type)
    values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{nameEn,jdbcType=VARCHAR}, 
      #{role,jdbcType=BIGINT}, #{unitType,jdbcType=INTEGER})
  </insert>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from unit
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <update id="updateByPrimaryKey" parameterType="com.dfs.api.entity.common.UnitEntity">
    update unit
    set name = #{name,jdbcType=VARCHAR},
      name_en = #{nameEn,jdbcType=VARCHAR},
      role = #{role,jdbcType=BIGINT},
      unit_type = #{unitType,jdbcType=INTEGER}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <update id="updateByPrimaryKeySelective" parameterType="com.dfs.api.entity.common.UnitEntity">
    update unit
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="nameEn != null">
        name_en = #{nameEn,jdbcType=VARCHAR},
      </if>
      <if test="role != null">
        role = #{role,jdbcType=BIGINT},
      </if>
      <if test="unitType != null">
        unit_type = #{unitType,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.dfs.api.entity.common.UnitEntity">
    select 
    <include refid="select_column" />
    from unit
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByCondition" parameterType="com.dfs.api.entity.common.UnitEntity" resultType="com.dfs.api.entity.common.UnitEntity">
    select 
    <include refid="select_column" />
    from unit
    <include refid="where_condition" />
  </select>

  <select id="countByCondition" parameterType="com.dfs.api.entity.common.UnitEntity" resultType="java.lang.Integer">
    select count(*) 
    from unit
    <include refid="where_condition" />
  </select>
  
  <select id="getBasicModelByBookId" resultType="com.dfs.api.model.BasicModel">
    select u.id,u.name
    from unit u,book_unit b
    where b.book_id=#{bookId,jdbcType=BIGINT} and b.unit_id=u.id
    <if test="unitType != null">
    	and u.unit_type=#{unitType,jdbcType=INTEGER}
    </if>
  </select>
  
  <select id="getBasicModelById" parameterType="java.lang.Long" resultType="com.dfs.api.model.BasicModel">
    select id,name
    from unit
    where id=#{id,jdbcType=BIGINT}
  </select>
  
  <select id="listBasicInfo" parameterType="java.lang.Integer" resultType="com.dfs.api.model.BasicModel">
    select id,name
    from unit
    where unit_type=#{unitType,jdbcType=INTEGER}
  </select>
</mapper>